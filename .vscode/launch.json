{
    "version": "0.2.0",
    "configurations": [
        
    {
        "name": "Debug: NPM Start (Production Mode)",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
            "run-script", 
            "start" 
        ],
        "console": "integratedTerminal",
        "skipFiles": [
            "<node_internals>/**"
        ]
    },
    {
        "name": "Debug: Nodemon (Development)",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/src/server.js",
        "runtimeExecutable": "npx",
        "runtimeArgs": [
            "nodemon",
            "--exec",
            "node",
            "--inspect=9229"
        ],
        "console": "integratedTerminal",
        "skipFiles": [
            "<node_internals>/**"
        ]
    },
    {
        "name": "Attach: Pick Process (Ch·ªçn ti·∫øn tr√¨nh)",
